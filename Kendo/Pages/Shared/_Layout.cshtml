<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow " style="border: 0px !important;">
                <a class="navbar-brand navbar-color" asp-area="" asp-page="/Index">Strona</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                  
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       <li>
                           
                       </li>
                    </ul>
                </div>
                <div class="LoginHolder form-inline mr-auto "> 
                @if ((bool)@ViewData["Switch"] == false)
                {
                    <a href="/zaloguj" class="nav-item nav-link navbar-color">Zaloguj się</a>
                    <a href="/zarejestruj" class="nav-item nav-link navbar-color">Zarejestruj</a>

                }
                else{
                    <a href="/wyloguj" class="nav-item nav-link navbar-color">Wyloguj</a>
                }
            </div>
        </nav>
    </header>
 @RenderBody()



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
